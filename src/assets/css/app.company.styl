.container-company
  app-bg(white-block, font-blue)
  padding 30px 40px
  height auto
  .flex-company
    margin-top 1em
    min-height 50vh
    display flex
    flex-row-wrap()
    justify-content center
    align-items center
    color white-block
    .icon-company
      width 25%
      height 100%
      float left
      .hexagon
        width 150px
        height 82.5px
        background blue-block
        position relative
        margin 50px auto
        &:before
          content ""
          position absolute
          top -36.5px
          left 0
          width 0
          height 0
          border-left 75px solid transparent
          border-right 75px solid transparent
          border-bottom 37.5px solid blue-block
         &:after
          content ""
          position absolute
          bottom -36.5px
          left 0
          width 0
          height 0
          border-left 75px solid transparent
          border-right 75px solid transparent
          border-top 37.5px solid blue-block
    .content-company
      width 75%
      height 100%
      float right
      article
        padding 10px
        text-align justify
        color font-black
        h3
          margin-top 0px
        p
          padding 20px

@media (max-width: 1100px)
  .container-company
    .col
      flex 1 1 auto

@media (max-width: 700px)
  .container-company
    .col
      .icon-company
        width 100%
        height 100%
      .content-company
        width 100%
        height 100%
        article
          padding 5px
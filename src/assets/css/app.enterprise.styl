.container-enterprise
  app-bg(font-white, font-blue)
  padding 40px
  height auto
  display block
  .container-text
  	width 100%
  	margin-top 40px
		.description
			width 80%
			display inline-block
			color font-black
		.icon
			width 20%
			display inline-block
			img
				height 200px

@media (max-width: 991px)
  .container-enterprise
    .container-text
      .icon
        margin-top 10px
        width 100%
        height 100%
      .description
        width 100%
        height 100%